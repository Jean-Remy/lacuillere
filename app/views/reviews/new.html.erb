<h1 class="text-center">Add a review to <%= @restaurant.name %> </h1>


<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, placeholder: "C'est si bon..." %>
        <%= f.input :rating, label: "Rating", collection: [0,1,2,3,4,5] %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>


